{
  "name": "nextjs-custom-demo",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "Thomas Newman",
  "main": "src/index.ts",
  "scripts": {
    "build": "pnpm clean && swc src -d dist --strip-leading-paths",
    "clean": "rm -rf dist",
    "dev": "concurrently \"pnpm watch:compile\" \"pnpm watch:dev:server\"",
    "start:server": "pnpm build && NODE_ENV=production node dist/server/index.js",
    "watch:compile": "swc src -w --out-dir dist --strip-leading-paths",
    "watch:dev:server": "nodemon --watch \"dist/server/**/*\" -e js ./dist/server/index.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.12",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.5",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4"
  }
}
